@page
@model MyPhonebook.Pages.Phones.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Phone.PhoneId" />
            <div class="form-group">
                <label asp-for="Phone.LandLineNumber" class="control-label"></label>
                <input asp-for="Phone.LandLineNumber" class="form-control" />
                <span asp-validation-for="Phone.LandLineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.MobileNumber" class="control-label"></label>
                <input asp-for="Phone.MobileNumber" class="form-control" />
                <span asp-validation-for="Phone.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Phone.isUsingWhatsApp" /> @Html.DisplayNameFor(model => model.Phone.isUsingWhatsApp)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Phone.UserId" class="control-label"></label>
                <select asp-for="Phone.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Phone.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
