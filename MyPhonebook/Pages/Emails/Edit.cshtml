@page
@model MyPhonebook.Pages.Emails.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Email.EmailID" />
            <div class="form-group">
                <label asp-for="Email.ElectonicMail" class="control-label"></label>
                <input asp-for="Email.ElectonicMail" class="form-control" />
                <span asp-validation-for="Email.ElectonicMail" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Email.isActive" /> @Html.DisplayNameFor(model => model.Email.isActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Email.UserId" class="control-label"></label>
                <select asp-for="Email.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Email.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
